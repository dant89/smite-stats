{% extends 'base.html.twig' %}

{% block title %}{{ clan.Name }} Clan - Unofficial SMITE{% endblock %}

{% block body %}

    <div class="bg-light">
        <div class="container">

            <h1><a href="{{ path('clan_view', {name: clan.Name}) }}">{{ clan.Name }} Smite Clan</a></h1>

            <h5>Created by {{ clan.Founder }}</h5>

            <div class="row">
                {% for player in clan_players %}
                    <div class="col-12">

                        <div class="card mb-4 box-shadow">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-1">
                                        <img class="rounded" src="{{ player.Player_info.Avatar_URL }}" width="50px" />
                                    </div>
                                    <div class="col-3">
                                        <h3><a href="{{ path('player_view', {gamertag: player.Name|slugify}) }}">{{ player.Name }}</a></h3>
                                        <h5>Level: {{ player.AccountLevel }}</h5>
                                    </div>
                                    <div class="col-2">
                                        <ul class="list-unstyled">
                                            <li>Hours Played: {{ player.Player_info.HoursPlayed }}</li>
                                            <li>Achievements: {{ player.Player_info.Total_Achievements }}</li>
                                        </ul>
                                    </div>
                                    <div class="col-2">
                                        <ul class="list-unstyled">
                                            <li>Wins: {{ player.Player_info.Wins }}</li>
                                            <li>Losses: {{ player.Player_info.Losses }}</li>
                                            <li>Quits: {{ player.Player_info.Leaves }}</li>
                                        </ul>
                                    </div>
                                    <div class="col-2">
                                        <ul class="list-unstyled">
                                            <li>Kills: {{ player.Stats_info.Kills }}</li>
                                            <li>Assists: {{ player.Stats_info.Assists }}</li>
                                            <li>Deaths: {{ player.Stats_info.Deaths }}</li>
                                        </ul>
                                    </div>
                                    <div class="col-2">
                                        <ul class="list-unstyled">
                                            <li>K/D: {{ (player.Stats_info.Kills / player.Stats_info.Deaths)|round(2) }}</li>
                                            <li>K/D/A: {{ ((player.Stats_info.Kills + player.Stats_info.Assists) / player.Stats_info.Deaths)|round(2) }}</li>
                                        </ul>
                                    </div>
                                    <div class="col-12">
                                        <h3>Top Gods</h3>
                                        <div class="row">

                                            {% for god in player.God_info %}
                                            <div class="col">
                                                <div class="rounded smite-god" style="background-image: url({{ gods[god.god].godCard_URL }})">
                                                    <a href="{{ path('god_view', {name: god.god|slugify}) }}">{{ god.god }}</a>
                                                </div>

                                                <ul class="list-unstyled">
                                                    <li>Rank: {{ god.Rank }}</li>
                                                    <li>Win Percent: {{ ((god.Wins / (god.Wins + god.Losses)) * 100)|round(2) }}%</li>
                                                    <li>Wins: {{ god.Wins }}</li>
                                                    <li>Losses: {{ god.Losses }}</li>
                                                </ul>
                                                <ul class="list-unstyled">
                                                    <li>Kills: {{ god.Kills }}</li>
                                                    <li>Assists: {{ god.Assists }}</li>
                                                    <li>Deaths: {{ god.Deaths }}</li>
                                                    <li>K/D: {{ (god.Kills / god.Deaths)|round(2) }}</li>
                                                    <li>K/D/A: {{ ((god.Kills + god.Assists) / god.Deaths)|round(2) }}</li>
                                                </ul>
                                            </div>
                                            {% endfor %}

                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
