{% extends 'base.html.twig' %}

{% block title %}Smite Gods - Unofficial SMITE{% endblock %}

{% block header_meta %}
    <link rel="canonical" href="https://smitestats.com/gods/" />
{% endblock %}

{% block body %}

    <div class="bg-light pt-3 pb-5">
        <div class="container">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="breadcrumb-item active">Gods</li>
                </ol>
            </nav>

            <div class="row">

                <div class="col-12">
                    <h1><a href="{{ path('gods') }}">Smite Gods</a></h1>

                    <div class="row">
                        {% for god in gods %}
                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <div class="rounded smite-god" style="background-image: url({{ god.cardUrl }})">
                                    <a href="{{ path('god_view', {name: god.name|slug}) }}" title="Smite God {{ god.name }}">{{ god.name }}</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>

        </div>
    </div>

{% endblock %}
