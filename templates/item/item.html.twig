{% extends 'base.html.twig' %}

{% block title %}{{ item.itemName }} {{ type }} - Smite Stats - Unofficial SMITE{% endblock %}

{% block header_meta %}
    <link rel="canonical" href="https://smitestats.com/{{ type_uri }}/{{ item.itemName|slug }}-{{ item.itemId }}" />
{% endblock %}

{% block body %}
    <div class="bg-light pt-3 pb-5">
        <div class="container">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('items') }}">Items</a></li>
                    <li class="breadcrumb-item active">{{ item.itemName }}</li>
                </ol>
            </nav>

            <h1>{{ item.itemName }} Smite {{ type }}</h1>
            <h4>{{ item.shortDescription }}</h4>

            <div class="row">
                <div class="col-md-4">

                    <img style="max-height: 128px;max-width: 128px;" src="{{ item.iconUrl }}" />
                    <br />
                    <br />

                    <p>{{ item.description }}</p>
                    <p>{{ item.secondaryDescription }}</p>

                </div>
            </div>

        </div>
    </div>

{% endblock %}
