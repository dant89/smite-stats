{% extends 'base.html.twig' %}

{% block title %}Smite Items - Unofficial SMITE{% endblock %}

{% block header_meta %}
    <link rel="canonical" href="https://smitestats.com/items/" />
{% endblock %}

{% block body %}
    <div class="bg-light pt-3 pb-5">
        <div class="container">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="breadcrumb-item active">Items</li>
                </ol>
            </nav>

            <h1>Smite Items</h1>

            <div class="row">
                <div class="col-md-12">

                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#items">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#relics">Relics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#consumables">Consumables</a>
                        </li>
                    </ul>

                    <div class="tab-content bg-white p-4 border border-top-0 rounded-bottom">
                        <div id="items" class="tab-pane fade show active">
                            <h2>Items</h2>
                            <div class="row">
                                {% for item in items %}
                                    <div class="col-6 col-xs-3 col-sm-2 mb-2">
                                        <a href="{{ path('item_view', {
                                            'name': item.itemName|slug,
                                            'id': item.itemId
                                        }) }}">
                                            <img style="max-height: 100%;max-width: 100%;" title="{{ item.itemName }}" src="{{ item.iconUrl }}" /><br />
                                            {{ item.itemName }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div id="relics" class="tab-pane fade">
                            <h2>Relics</h2>
                            <div class="row">
                                {% for item in relics %}
                                    <div class="col-6 col-xs-3 col-sm-2 mb-2">
                                        <a href="{{ path('relic_view', {
                                            'name': item.itemName|slug,
                                            'id': item.itemId
                                        }) }}">
                                            <img style="max-height: 100%;max-width: 100%;" title="{{ item.itemName }}" src="{{ item.iconUrl }}" /><br />
                                            {{ item.itemName }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div id="consumables" class="tab-pane fade">
                            <h2>Consumables</h2>
                            <div class="row">
                                {% for item in consumables %}
                                    <div class="col-6 col-xs-3 col-sm-2">
                                        <a href="{{ path('consumable_view', {
                                            'name': item.itemName|slug,
                                            'id': item.itemId
                                        }) }}">
                                            <img style="max-height: 100%;max-width: 100%;" title="{{ item.itemName }}" src="{{ item.iconUrl }}" /><br />
                                            {{ item.itemName }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

{% endblock %}
